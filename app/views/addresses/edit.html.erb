<h3>Edit address</h3>
<%= form_for @address do |f| %>
	<% if @address.errors.any? %>
		<div class = "errors" style = "color: red;">
			<ul>
				<% @address.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<%= f.label :title %><br/>
	<%= f.text_field :title %><br/>
	<%= f.label :address %><br/>
	<%= f.text_area :address %><br/>
	<%= f.label :landmark %><br/>
	<%= f.text_field :landmark %><br/><br/>
	<%= f.submit "Update" %>
<% end %>