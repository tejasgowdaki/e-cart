<h2>Add product details</h2>
<%= form_for @product do |f| %>
	<% if @product.errors.any? %>
		<div class = "errors" style = "color: red;">
			<ul>
				<% @product.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<%= f.label :name %><br/>
	<%= f.text_field :name %><br/>
	<%= f.label :price %><br/>
	<%= f.number_field :price %><br/>
	<%= f.label :description %><br/>
	<%= f.text_area :description %><br/>
	<%= f.label :size %><br/>
	<%= f.collection_check_boxes :size_ids, Size.all, :id, :name %><br/>
	<%= f.label :stock %><br/>
	<%= f.number_field :stock %><br/>
	<%= f.label :availability_date %><br/>
	<%= f.date_select :availability_date, order: [:day, :month, :year] %><br/>
	<%= f.label :category_id %><br/>
	<%= f.collection_select :category_id, Category.all, :id, :name, prompt: "Select category" %><br/>
	<%= f.label :sub_category_id %><br/>
	<%= f.collection_select :sub_category_id, SubCategory.all, :id, :name, prompt: "Select category" %><br/>
	<%= f.label :brand_id %><br/>
	<%= f.collection_select :brand_id, Brand.all, :id, :name, prompt: "Select category" %><br/><br/>

	<%= f.submit %>
<% end %>