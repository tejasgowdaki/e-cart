<h3><%= @product.name %></h3><%= link_to @product.brand.name, brand_path(@product.brand.id) %>, <%= link_to @product.sub_category.name, sub_category_path(@product.sub_category.id) %>, <%= link_to @product.category.name, category_path(@product.sub_category.id) %><br/><br/>
Price : <%= @product.price %><br/><br/>
Sizes : <% @product.sizes.each do |size| %>
			<%= size.name %>, 	
		<% end %><br/><br/>
Description : <%= @product.description %><br/><br/>
<% if @product.availability_date > Date.today %>
	<b>Available from : <%= @product.availability_date %></b>
<% else %>
	<b>Stock left : <%= @product.stock %></b>
<% end %><br/>

<h3>Reviews</h3>
<ol>
	<% @product.reviews.each do |review| %>
		<li><b><%= review.user_profile.name %></b><br/><br/>
			<b><%= review.title %></b><br/>
			<b>Rating</b> - <%= review.rating %>/5<br/>
			<p><%= review.body %></p>
			<% if review.user_profile_id == current_user.user_profile.id %>
				<%= link_to "Delete", review_path(review.id), method: :delete,alert: {confirm: "are you sure"} %>
			<% end %>
		</li>
	<% end %>
</ol>
<b>Add review</b>
<% if user_signed_in? %>
	<%= form_for @review do |f| %>
		<% if @review.errors.any? %>
			<div class = "errors" style = "color: red;">
			 	<ul>
					<% @review.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
		<%= f.label :title %><br/>
		<%= f.text_field :title %><br/>
		<%= f.label :rating %><br/>
		<%= f.text_field :rating %><br/>
		<%= f.label :body %><br/>
		<%= f.text_area :body %><br/><br/>
		<%= f.hidden_field :product_id, value: @product.id %>
		<%= f.hidden_field :user_profile_id, value: current_user.user_profile.id %>
		<%= f.submit "Save" %>
	<% end %>
<% else %>
	<br/><br/>
	<%= link_to "Login", new_user_session_path %> to add review.
<% end %>