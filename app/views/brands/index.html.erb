<h2>List of brands</h2>
<% if can? :create, Brand.new %>
	<%= link_to "Add brand", new_brand_path %>
<% end %>
<ol>
	<% @brands.each do |brand| %>
		<li><%= brand.name %>
		<% if can? :update, brand %>
			<%= link_to "Edit", edit_brand_path(brand.id) %>
		<% end %>
		<% if can? :destroy, brand %>
			<%= link_to "Delete", brand_path(brand.id), method: :delete, data: {confirm: "Are you sure"} %>
		<% end %>
		</li><br/>
	<% end %>
</ol>