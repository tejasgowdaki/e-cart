<h2>List of categories</h2>
<%= link_to "Add category", new_category_path %>
<ol>
	<% @categories.each do |category| %>
		<li><%= link_to category.name, category_path(category.id) %>
		<%= link_to "Edit", edit_category_path(category.id) %> | <%= link_to "Delete", category_path(category.id), method: :delete, data: {confirm: "Are you sure"} %></li><br/>
	<% end %>
</ol>