<h2>List of categories</h2>
<% if can? :create, Category.new %>
	<%= link_to "Add category", new_category_path %>
<% end %>
<ol>
	<% @categories.each do |category| %>
		<li><%= link_to category.name, category_path(category.id) %>
		<% if can? :update, category %>
			<%= link_to "Edit", edit_category_path(category.id) %>
		<% end %>
		<% if can? :destroy, category %>
			<%= link_to "Delete", category_path(category.id), method: :delete, data: {confirm: "Are you sure"} %>
		<% end %>
		</li><br/>
	<% end %>
</ol>