<p id="notice"><%= notice %></p>

<h1>Listing Order Line Items</h1>

<table>
  <thead>
    <tr>
      <th>Order number</th>
      <th>Product</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Total</th>
      <th>Order status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_line_items.each do |order_line_item| %>
      <tr>
        <td><%= order_line_item.order.order_number %></td>
        <td><%= order_line_item.product.name %></td>
        <td><%= order_line_item.price %></td>
        <td><%= order_line_item.quantity %></td>
        <td><%= order_line_item.price * order_line_item.quantity %></td>
        <td><%= order_line_item.order.order_status %></td>
        <td><%= link_to "Cancel order", orders_cancel_order_path(order_id: order_line_item.order.id) %></td>
        <td><%= link_to "Show", order_path(order_line_item.order.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
