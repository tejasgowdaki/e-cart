<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>

<table>
  <thead>
    <tr>
      <th>Order number</th>
      <th>Order date</th>
      <th>Total</th>
      <th>Order status</th>
      <th>Payment mode</th>
      <th>User</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.order_number %></td>
        <td><%= order.order_date %></td>
        <td><%= order.total %></td>
        <td><%= order.order_status %></td>
        <td><%= order.payment_mode %></td>
        <td><%= order.user_id %></td>
        <td><%= order.address_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

